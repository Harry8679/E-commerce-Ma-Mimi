{% extends 'base.html.twig' %}

{% block title %}{{ post.title }} - Blog{% endblock %}

{% block body %}
{# Fil d'Ariane #}
<nav class="text-sm text-gray-600 mb-6">
    <a href="{{ path('app_home') }}" class="hover:text-amber-700">Accueil</a>
    <span class="mx-2">‚Ä∫</span>
    <a href="{{ path('app_blog_index') }}" class="hover:text-amber-700">Blog</a>
    <span class="mx-2">‚Ä∫</span>
    <a href="{{ path('app_blog_index', {category: post.category.id}) }}" class="hover:text-amber-700">{{ post.category.name }}</a>
    <span class="mx-2">‚Ä∫</span>
    <span class="text-gray-900 font-semibold">{{ post.title }}</span>
</nav>

<div class="grid lg:grid-cols-3 gap-8">
    {# Contenu principal #}
    <article class="lg:col-span-2">
        {# En-t√™te de l'article #}
        <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
            {# Image √† la une #}
            {% if post.featuredImage %}
                <div class="relative" style="padding-top: 50%;">
                    <img src="/uploads/blog/{{ post.featuredImage }}" 
                         alt="{{ post.title }}" 
                         class="absolute inset-0 w-full h-full object-cover">
                </div>
            {% endif %}

            <div class="p-8">
                {# Cat√©gorie #}
                <a href="{{ path('app_blog_index', {category: post.category.id}) }}" 
                   class="inline-block px-3 py-1 rounded-full text-sm font-bold text-white mb-4" 
                   style="background-color: {{ post.category.color }}">
                    {{ post.category.name }}
                </a>

                {# Titre #}
                <h1 class="text-4xl font-bold text-gray-900 mb-4">{{ post.title }}</h1>

                {# Meta informations #}
                <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 mb-6 pb-6 border-b border-gray-200">
                    <div class="flex items-center">
                        <div class="w-10 h-10 rounded-full bg-amber-600 flex items-center justify-center text-white font-bold mr-2">
                            {{ post.author.firstName|first }}{{ post.author.lastName|first }}
                        </div>
                        <div>
                            <p class="font-semibold text-gray-900">{{ post.author.fullName }}</p>
                            <p class="text-xs">{{ post.publishedAt|date('d/m/Y √† H:i') }}</p>
                        </div>
                    </div>

                    <div class="flex items-center space-x-4">
                        <span>üëÅÔ∏è {{ post.likesCount + post.commentsCount * 5 }} vues</span>
                        <span>‚ù§Ô∏è {{ post.likesCount }} j'aime</span>
                        <span>üí¨ {{ post.commentsCount }} commentaires</span>
                    </div>
                </div>

                {# Bouton Like #}
                <div class="mb-6">
                    {% if app.user %}
                        <form method="post" action="{{ path('app_blog_like', {id: post.id}) }}" class="inline">
                            <button type="submit" class="inline-flex items-center px-6 py-3 rounded-lg font-semibold transition {% if post.isLikedByUser(app.user) %}bg-red-100 text-red-700 hover:bg-red-200{% else %}bg-gray-100 text-gray-700 hover:bg-gray-200{% endif %}">
                                {% if post.isLikedByUser(app.user) %}
                                    ‚ù§Ô∏è Vous aimez cet article
                                {% else %}
                                    ü§ç J'aime cet article
                                {% endif %}
                            </button>
                        </form>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="inline-flex items-center px-6 py-3 bg-gray-100 text-gray-700 rounded-lg font-semibold hover:bg-gray-200 transition">
                            ü§ç Connectez-vous pour liker
                        </a>
                    {% endif %}
                </div>

                {# Contenu de l'article #}
                <div class="prose prose-lg max-w-none">
                    {{ post.content|nl2br }}
                </div>

                {# Partage social #}
                <div class="mt-8 pt-8 border-t border-gray-200">
                    <h3 class="font-bold text-gray-900 mb-4">Partager cet article</h3>
                    <div class="flex gap-3">
                        <a href="https://www.facebook.com/sharer/sharer.php?u={{ url('app_blog_show', {slug: post.slug}) }}" target="_blank" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                            Facebook
                        </a>
                        <a href="https://twitter.com/intent/tweet?url={{ url('app_blog_show', {slug: post.slug}) }}&text={{ post.title }}" target="_blank" class="px-4 py-2 bg-sky-500 text-white rounded-lg hover:bg-sky-600 transition">
                            Twitter
                        </a>
                        <a href="https://www.linkedin.com/shareArticle?mini=true&url={{ url('app_blog_show', {slug: post.slug}) }}" target="_blank" class="px-4 py-2 bg-blue-700 text-white rounded-lg hover:bg-blue-800 transition">
                            LinkedIn
                        </a>
                    </div>
                </div>
            </div>
        </div>

        {# Section Commentaires #}
        <div class="bg-white rounded-lg shadow-md p-8" id="comments">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">
                üí¨ Commentaires ({{ post.commentsCount }})
            </h2>

            {# Formulaire d'ajout de commentaire #}
            {% if app.user %}
                <div class="mb-8 bg-gray-50 rounded-lg p-6">
                    <h3 class="font-bold text-gray-900 mb-4">Laisser un commentaire</h3>
                    {{ form_start(commentForm) }}
                        {{ form_widget(commentForm.content) }}
                        {{ form_errors(commentForm.content) }}
                        
                        <button type="submit" class="mt-4 bg-amber-600 hover:bg-amber-700 text-white px-6 py-3 rounded-lg font-semibold transition">
                            Publier le commentaire
                        </button>
                    {{ form_end(commentForm) }}
                </div>
            {% else %}
                <div class="mb-8 bg-blue-50 border border-blue-200 rounded-lg p-6 text-center">
                    <p class="text-blue-800 mb-4">Connectez-vous pour laisser un commentaire</p>
                    <a href="{{ path('app_login') }}" class="inline-block bg-amber-600 hover:bg-amber-700 text-white px-6 py-3 rounded-lg font-semibold transition">
                        Se connecter
                    </a>
                </div>
            {% endif %}

            {# Liste des commentaires #}
            {% if post.comments is empty %}
                <div class="text-center py-12">
                    <div class="text-6xl mb-4">üí≠</div>
                    <p class="text-gray-600">Aucun commentaire pour le moment. Soyez le premier √† commenter !</p>
                </div>
            {% else %}
                <div class="space-y-6">
                    {% for comment in post.comments %}
                        <div class="border-b border-gray-200 pb-6 last:border-0">
                            <div class="flex items-start gap-4">
                                {# Avatar #}
                                <div class="w-12 h-12 rounded-full bg-amber-600 flex items-center justify-center text-white font-bold flex-shrink-0">
                                    {{ comment.author.firstName|first }}{{ comment.author.lastName|first }}
                                </div>

                                {# Contenu #}
                                <div class="flex-1">
                                    <div class="flex items-center justify-between mb-2">
                                        <div>
                                            <p class="font-semibold text-gray-900">{{ comment.author.fullName }}</p>
                                            <p class="text-sm text-gray-600">{{ comment.createdAt|date('d/m/Y √† H:i') }}</p>
                                        </div>

                                        {# Bouton supprimer (auteur seulement) #}
                                        {% if app.user and comment.author == app.user %}
                                            <form method="post" action="{{ path('app_blog_comment_delete', {id: comment.id}) }}" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce commentaire ?')">
                                                <button type="submit" class="text-red-600 hover:text-red-800 text-sm">
                                                    Supprimer
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>

                                    <p class="text-gray-700">{{ comment.content }}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </article>

    {# Sidebar #}
    <aside class="lg:col-span-1">
        {# √Ä propos de l'auteur #}
        <div class="bg-white rounded-lg shadow-md p-6 mb-6 sticky top-4">
            <h3 class="text-lg font-bold text-gray-900 mb-4">√Ä propos de l'auteur</h3>
            <div class="text-center mb-4">
                <div class="w-20 h-20 rounded-full bg-amber-600 flex items-center justify-center text-white font-bold text-2xl mx-auto mb-3">
                    {{ post.author.firstName|first }}{{ post.author.lastName|first }}
                </div>
                <p class="font-bold text-gray-900">{{ post.author.fullName }}</p>
            </div>
            <p class="text-sm text-gray-600 text-center">
                Passionn√© de rhum et expert en spiritueux
            </p>
        </div>

        {# Articles similaires #}
        {% if relatedPosts is not empty %}
            <div class="bg-white rounded-lg shadow-md p-6">
                <h3 class="text-lg font-bold text-gray-900 mb-4">Articles similaires</h3>
                <div class="space-y-4">
                    {% for relatedPost in relatedPosts %}
                        <a href="{{ path('app_blog_show', {slug: relatedPost.slug}) }}" class="block group">
                            <div class="flex gap-3">
                                <div class="w-20 h-20 rounded-lg overflow-hidden flex-shrink-0">
                                    {% if relatedPost.featuredImage %}
                                        <img src="/uploads/blog/{{ relatedPost.featuredImage }}" 
                                             alt="{{ relatedPost.title }}" 
                                             class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300">
                                    {% else %}
                                        <div class="w-full h-full bg-gradient-to-br from-amber-400 to-amber-600 flex items-center justify-center">
                                            <span class="text-2xl">üìù</span>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="flex-1">
                                    <h4 class="font-semibold text-sm text-gray-900 group-hover:text-amber-700 line-clamp-2 mb-1">
                                        {{ relatedPost.title }}
                                    </h4>
                                    <p class="text-xs text-gray-600">{{ relatedPost.publishedAt|date('d/m/Y') }}</p>
                                </div>
                            </div>
                        </a>
                        {% if not loop.last %}
                            <hr class="border-gray-200">
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </aside>
</div>
{% endblock %}