{% extends 'base.html.twig' %}

{% block title %}Changer mon mot de passe{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <a href="{{ path('app_profile') }}" class="text-amber-600 hover:text-amber-700 font-semibold text-sm inline-flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            Retour au profil
        </a>
    </div>

    <h1 class="text-4xl font-bold text-gray-900 mb-8">Changer mon mot de passe</h1>

    <div class="bg-white rounded-lg shadow-md p-8">
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
            <h3 class="font-bold text-blue-900 mb-2">üí° Conseils de s√©curit√©</h3>
            <ul class="text-sm text-blue-800 space-y-1">
                <li>‚Ä¢ Utilisez au moins 6 caract√®res</li>
                <li>‚Ä¢ M√©langez lettres majuscules et minuscules</li>
                <li>‚Ä¢ Ajoutez des chiffres et des caract√®res sp√©ciaux</li>
                <li>‚Ä¢ N'utilisez pas d'informations personnelles</li>
            </ul>
        </div>

        {{ form_start(form) }}
        
        <div class="space-y-6">
            <div>
                {{ form_label(form.currentPassword, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                {{ form_widget(form.currentPassword) }}
                {{ form_errors(form.currentPassword) }}
            </div>

            <hr class="my-6">

            <div>
                {{ form_label(form.newPassword.first, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                {{ form_widget(form.newPassword.first) }}
                {{ form_errors(form.newPassword.first) }}
            </div>

            <div>
                {{ form_label(form.newPassword.second, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                {{ form_widget(form.newPassword.second) }}
                {{ form_errors(form.newPassword.second) }}
            </div>
        </div>

        <div class="mt-8 flex gap-4">
            <button type="submit" class="flex-1 bg-amber-600 hover:bg-amber-700 text-white font-bold py-3 rounded-lg transition">
                Changer le mot de passe
            </button>
            <a href="{{ path('app_profile') }}" class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-3 rounded-lg transition text-center">
