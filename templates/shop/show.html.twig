{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Boutique{% endblock %}

{% block body %}
{# Fil d'Ariane #}
<nav class="text-sm text-gray-600 mb-6">
    <a href="{{ path('app_home') }}" class="hover:text-amber-700">Accueil</a>
    <span class="mx-2">‚Ä∫</span>
    <a href="{{ path('app_shop') }}" class="hover:text-amber-700">Boutique</a>
    <span class="mx-2">‚Ä∫</span>
    <a href="{{ path('app_shop', {category: product.category.id}) }}" class="hover:text-amber-700">{{ product.category.name }}</a>
    <span class="mx-2">‚Ä∫</span>
    <span class="text-gray-900 font-semibold">{{ product.name }}</span>
</nav>

<div class="grid md:grid-cols-2 gap-12 mb-16">
    {# Image du produit #}
    <div class="sticky top-4 h-fit">
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
            {% if product.image %}
                <img src="/uploads/products/{{ product.image }}" 
                     alt="{{ product.name }}" 
                     class="w-full h-auto">
            {% else %}
                <div class="aspect-square flex items-center justify-center bg-gray-200">
                    <span class="text-9xl">ü•É</span>
                </div>
            {% endif %}
        </div>
    </div>

    {# Informations du produit #}
    <div>
        <div class="mb-4">
            <a href="{{ path('app_shop', {category: product.category.id}) }}" 
               class="inline-block text-sm text-amber-600 hover:text-amber-700 font-semibold mb-2">
                {{ product.category.name }}
            </a>
            {% if product.isFeatured %}
                <span class="ml-2 bg-amber-100 text-amber-800 px-3 py-1 rounded-full text-xs font-bold">
                    ‚≠ê √Ä la une
                </span>
            {% endif %}
        </div>

        <h1 class="text-4xl font-bold text-gray-900 mb-4">{{ product.name }}</h1>

        {# Prix #}
        <div class="mb-6">
            <span class="text-4xl font-bold text-amber-700">
                {{ product.price|number_format(2, ',', ' ') }} ‚Ç¨
            </span>
            <span class="text-gray-600 ml-2">TTC</span>
        </div>

        {# Caract√©ristiques #}
        <div class="bg-amber-50 rounded-lg p-6 mb-6">
            <h3 class="font-bold text-gray-900 mb-3">Caract√©ristiques</h3>
            <div class="grid grid-cols-2 gap-4">
                {% if product.alcoholVolume %}
                    <div class="flex items-center">
                        {# <span class="text-2xl mr-2">üî•</span> #}
                        <div>
                            <div class="text-xs text-gray-600">Degr√© d'alcool</div>
                            <div class="font-semibold">{{ product.alcoholVolume }} ¬∞ üå°Ô∏è</div>
                        </div>
                    </div>
                {% endif %}
                
                {% if product.volume %}
                    <div class="flex items-center">
                        {# <span class="text-2xl mr-2">üìè</span> #}
                        <div>
                            <div class="text-xs text-gray-600">Volume</div>
                            <div class="font-semibold">{{ product.volume }} cl üç∑</div>
                        </div>
                    </div>
                {% endif %}
                
                {% if product.origin %}
                    <div class="flex items-center">
                        <span class="text-2xl mr-2">üåç</span>
                        <div>
                            <div class="text-xs text-gray-600">Origine</div>
                            <div class="font-semibold">{{ product.origin }}</div>
                        </div>
                    </div>
                {% endif %}
                
                <div class="flex items-center">
                    <span class="text-2xl mr-2">üì¶</span>
                    <div>
                        <div class="text-xs text-gray-600">Stock</div>
                        <div class="font-semibold">
                            {% if product.stock > 10 %}
                                <span class="text-green-600">En stock</span>
                            {% elseif product.stock > 0 %}
                                <span class="text-orange-600">{{ product.stock }} restants</span>
                            {% else %}
                                <span class="text-red-600">Rupture de stock</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Bouton ajouter au panier #}
{% if product.stock > 0 %}
    <form method="post" action="{{ path('app_cart_add', {id: product.id}) }}" class="mb-6">
        <div class="flex items-center gap-4 mb-4">
            <label for="quantity" class="font-semibold">Quantit√© :</label>
            <input type="number" 
                   name="quantity" 
                   id="quantity" 
                   value="1" 
                   min="1" 
                   max="{{ product.stock }}"
                   class="w-20 px-3 py-2 border border-gray-300 rounded-lg focus:ring-amber-500 focus:border-amber-500">
        </div>
        
        <button type="submit" 
                name="redirect_to"
                value="product"
                class="w-full bg-amber-600 hover:bg-amber-700 text-white font-bold py-4 rounded-lg transition text-lg mb-2">
            üõí Ajouter au panier
        </button>
        
        <button type="submit"
                name="redirect_to"
                value="cart"
                class="w-full bg-gray-600 hover:bg-gray-700 text-white font-bold py-3 rounded-lg transition">
            Ajouter et voir le panier
        </button>
    </form>
{% else %}
    <div class="bg-red-50 border-2 border-red-200 rounded-lg p-4 mb-6">
        <p class="text-red-800 font-semibold text-center">
            ‚ùå Produit actuellement en rupture de stock
        </p>
    </div>
{% endif %}

        {# Description #}
        <div class="prose prose-lg max-w-none">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Description</h2>
            <div class="text-gray-700 leading-relaxed">
                {{ product.description|nl2br }}
            </div>
        </div>

        {# Avertissement l√©gal #}
        <div class="mt-6 bg-red-50 border-l-4 border-red-500 p-4 rounded">
            <p class="text-sm text-red-800">
                ‚ö†Ô∏è <strong>L'abus d'alcool est dangereux pour la sant√©.</strong> √Ä consommer avec mod√©ration. 
                Vente interdite aux mineurs de moins de 18 ans.
            </p>
        </div>
    </div>
</div>

{# Produits similaires #}
{% if relatedProducts is not empty %}
    <section class="mt-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Vous pourriez aussi aimer</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {% for relatedProduct in relatedProducts %}
                <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
                    <a href="{{ path('app_product_show', {slug: relatedProduct.slug}) }}" class="block relative overflow-hidden bg-gray-100" style="padding-top: 100%;">
                        {% if relatedProduct.image %}
                            <img src="/uploads/products/{{ relatedProduct.image }}" 
                                 alt="{{ relatedProduct.name }}" 
                                 class="absolute inset-0 w-full h-full object-cover hover:scale-110 transition-transform duration-300">
                        {% else %}
                            <div class="absolute inset-0 flex items-center justify-center bg-gray-200">
                                <span class="text-6xl">ü•É</span>
                            </div>
                        {% endif %}
                    </a>

                    <div class="p-4">
                        <a href="{{ path('app_product_show', {slug: relatedProduct.slug}) }}">
                            <h3 class="text-lg font-bold text-gray-900 mb-2 hover:text-amber-700 transition">
                                {{ relatedProduct.name }}
                            </h3>
                        </a>
                        
                        <div class="flex items-center justify-between">
                            <span class="text-xl font-bold text-amber-700">
                                {{ relatedProduct.price|number_format(2, ',', ' ') }} ‚Ç¨
                            </span>
                            
                            <a href="{{ path('app_product_show', {slug: relatedProduct.slug}) }}" 
                               class="text-amber-600 hover:text-amber-700 font-semibold text-sm">
                                Voir ‚Üí
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endif %}
{% endblock %}