{% extends 'base.html.twig' %}

{% block title %}Choix de l'adresse de livraison{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto">
    {# Progression #}
    <div class="mb-8">
        <div class="flex items-center justify-center">
            <div class="flex items-center">
                <div class="flex items-center text-amber-600">
                    <div class="flex items-center justify-center w-10 h-10 bg-amber-600 text-white rounded-full font-bold">1</div>
                    <span class="ml-2 font-semibold">Adresse</span>
                </div>
                <div class="w-24 h-1 bg-gray-300 mx-4"></div>
                <div class="flex items-center text-gray-400">
                    <div class="flex items-center justify-center w-10 h-10 bg-gray-300 text-white rounded-full font-bold">2</div>
                    <span class="ml-2">Transporteur</span>
                </div>
                <div class="w-24 h-1 bg-gray-300 mx-4"></div>
                <div class="flex items-center text-gray-400">
