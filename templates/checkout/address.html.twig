                    <span class="ml-2">Paiement</span>
                </div>
            </div>
        </div>
    </div>

    <h1 class="text-4xl font-bold text-gray-900 mb-8">Choisissez votre adresse de livraison</h1>

    <div class="grid lg:grid-cols-3 gap-8">
        {# Liste des adresses #}
        <div class="lg:col-span-2">
            <div class="space-y-4">
                {% for address in addresses %}
                    {% if address.canBeUsedForShipping %}
                        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition {% if selectedAddress and selectedAddress.id == address.id %}ring-2 ring-amber-500{% endif %}">
                            <div class="flex items-start justify-between">
                                <div class="flex-1">
                                    <div class="flex items-center gap-3 mb-3">
                                        <h3 class="text-lg font-bold text-gray-900">{{ address.fullName }}</h3>
                                        
                                        {% if address.isDefault %}
                                            <span class="bg-amber-100 text-amber-800 px-2 py-1 rounded text-xs font-semibold">
                                                Par dÃ©faut
                                            </span>
                                        {% endif %}
                                        
                                        <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs font-semibold">
                                            {{ address.typeLabel }}
                                        </span>
                                    </div>
                                    
                                    <div class="text-gray-700 space-y-1">
                                        {% if address.phone %}
                                            <p class="text-sm">ðŸ“ž {{ address.phone }}</p>
                                        {% endif %}
                                        <p>{{ address.street }}</p>
                                        {% if address.streetComplement %}
                                            <p>{{ address.streetComplement }}</p>
                                        {% endif %}
                                        <p>{{ address.postalCode }} {{ address.city }}</p>
                                        <p>{{ address.country }}</p>
                                    </div>
                                </div>

                                <div class="ml-4">
                                    <form method="post" action="{{ path('app_checkout_address_select', {id: address.id}) }}">
                                        <button type="submit" class="bg-amber-600 hover:bg-amber-700 text-white px-6 py-2 rounded-lg font-semibold transition">
                                            {% if selectedAddress and selectedAddress.id == address.id %}
