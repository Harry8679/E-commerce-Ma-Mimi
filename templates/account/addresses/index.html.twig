{% block title %}Mes adresses{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    <div class="mb-8 flex items-center justify-between">
        <div>
            <h1 class="text-4xl font-bold text-gray-900 mb-2">Mes adresses</h1>
            <p class="text-gray-600">GÃ©rez vos adresses de livraison et de facturation</p>
        </div>
        <a href="{{ path('app_account_address_new') }}" class="bg-amber-600 hover:bg-amber-700 text-white px-6 py-3 rounded-lg font-semibold transition">
            + Ajouter une adresse
        </a>
    </div>

    {% if addresses is empty %}
        <div class="bg-white rounded-lg shadow-md p-12 text-center">
            <div class="text-6xl mb-4">ğŸ“</div>
            <h2 class="text-2xl font-bold text-gray-900 mb-2">Aucune adresse enregistrÃ©e</h2>
            <p class="text-gray-600 mb-6">Ajoutez une adresse pour faciliter vos prochaines commandes</p>
            <a href="{{ path('app_account_address_new') }}" class="inline-block bg-amber-600 hover:bg-amber-700 text-white px-8 py-3 rounded-lg font-semibold transition">
                Ajouter ma premiÃ¨re adresse
            </a>
        </div>
    {% else %}
        <div class="grid md:grid-cols-2 gap-6">
            {% for address in addresses %}
                <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition {% if address.isDefault %}ring-2 ring-amber-500{% endif %}">
                    <div class="flex items-start justify-between mb-4">
                        <div>
                            <h3 class="text-lg font-bold text-gray-900">{{ address.fullName }}</h3>
                            {% if address.isDefault %}
                                <span class="bg-amber-100 text-amber-800 px-2 py-1 rounded text-xs font-semibold">
                                    Par dÃ©faut
                                </span>
                            {% endif %}
                            <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs font-semibold ml-2">
                                {{ address.typeLabel }}
                            </span>
                        </div>
                    </div>

                    <div class="text-gray-700 text-sm space-y-1 mb-4">
                        {% if address.phone %}
                            <p>ğŸ“ {{ address.phone }}</p>
                        {% endif %}
                        <p>{{ address.street }}</p>
                        {% if address.streetComplement %}
                            <p>{{ address.streetComplement }}</p>
                        {% endif %}
                        <p>{{ address.postalCode }} {{ address.city }}</p>
                        <p>{{ address.country }}</p>
                    </div>

                    <div class="flex gap-2">
                        <a href="{{ path('app_account_address_edit', {id: address.id}) }}" class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 text-center px-4 py-2 rounded-lg font-semibold transition text-sm">
                            Modifier
                        </a>
                        
                        {% if not address.isDefault %}
                            <form method="post" action="{{ path('app_account_address_set_default', {id: address.id}) }}" class="flex-1">
                                <button type="submit" class="w-full bg-amber-100 hover:bg-amber-200 text-amber-800 px-4 py-2 rounded-lg font-semibold transition text-sm">
                                    DÃ©finir par dÃ©faut
                                </button>
                            </form>
                        {% endif %}
                        
                        <form method="post" action="{{ path('app_account_address_delete', {id: address.id}) }}" onsubmit="return confirm('ÃŠtes-vous sÃ»r de vouloir supprimer cette adresse ?')">
                            <button type="submit" class="bg-red-100 hover:bg-red-200 text-red-800 px-4 py-2 rounded-lg font-semibold transition text-sm">
                                Supprimer
                            </button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}