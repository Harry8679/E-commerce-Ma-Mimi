{% extends 'base.html.twig' %}

{% block title %}{{ isEdit ? 'Modifier' : 'Ajouter' }} une adresse{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <a href="{{ path('app_account_addresses') }}" class="text-amber-600 hover:text-amber-700 font-semibold text-sm inline-flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            Retour aux adresses
        </a>
    </div>

    <h1 class="text-4xl font-bold text-gray-900 mb-8">
        {{ isEdit ? 'Modifier l\'adresse' : 'Ajouter une adresse' }}
    </h1>

    <div class="bg-white rounded-lg shadow-md p-8">
        {{ form_start(form) }}
        
        <div class="space-y-6">
            <div>
                {{ form_label(form.fullName, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                {{ form_widget(form.fullName) }}
                {{ form_errors(form.fullName) }}
            </div>

            <div>
                {{ form_label(form.phone, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                {{ form_widget(form.phone) }}
                {{ form_errors(form.phone) }}
            </div>

            <div>
                {{ form_label(form.street, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                {{ form_widget(form.street) }}
                {{ form_errors(form.street) }}
            </div>

            <div>
                {{ form_label(form.streetComplement, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                {{ form_widget(form.streetComplement) }}
                {{ form_errors(form.streetComplement) }}
            </div>

            <div class="grid md:grid-cols-2 gap-6">
                <div>
                    {{ form_label(form.postalCode, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.postalCode) }}
                    {{ form_errors(form.postalCode) }}
                </div>

                <div>
                    {{ form_label(form.city, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.city) }}
                    {{ form_errors(form.city) }}
                </div>
            </div>

            <div>
                {{ form_label(form.country, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                {{ form_widget(form.country) }}
                {{ form_errors(form.country) }}
            </div>

            <div>
                {{ form_label(form.type, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                {{ form_widget(form.type) }}
                {{ form_errors(form.type) }}
            </div>
        </div>

        <div class="mt-8 flex gap-4">
            <button type="submit" class="flex-1 bg-amber-600 hover:bg-amber-700 text-white font-bold py-3 rounded-lg transition">
                {{ isEdit ? 'Enregistrer les modifications' : 'Ajouter l\'adresse' }}
            </button>
            <a href="{{ path('app_account_addresses') }}" class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-3 rounded-lg transition text-center">
                Annuler
            </a>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}